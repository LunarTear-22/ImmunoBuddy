<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:gravity="center_vertical">

    <!-- Colonna: Sintomo -->
    <TextView
        android:id="@+id/txtSintomoNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nome sintomo"
        android:textSize="16sp"
        android:textColor="@color/text_dark"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingEnd="8dp" />

    <!-- Colonna: Frequenza (cliccabile in modalità modifica) -->
    <TextView
        android:id="@+id/txtSintomoFrequenza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequenza"
        android:textSize="14sp"
        android:textColor="@color/text_dark"
        android:paddingEnd="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Colonna: Gravità (indicatore colorato) -->
    <View
        android:id="@+id/gravita"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/circle_indicator"
        android:layout_marginEnd="4dp" />

</TableRow>

