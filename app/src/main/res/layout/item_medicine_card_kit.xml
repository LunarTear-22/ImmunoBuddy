<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp"
    android:background="@color/background_light"
    android:gravity="center_vertical">

    <!-- Nome farmaco -->
    <EditText
        android:id="@+id/tvMedicineName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="Nome Farmaco..."
        android:textColorHint="@color/text_dark_transparent"
        android:textColor="@color/text_dark"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@android:color/transparent"/>

    <!-- Tipologia farmaco -->
    <EditText
        android:id="@+id/tvMedicineType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="Tipo Farmaco..."
        android:textColorHint="@color/text_dark_transparent"
        android:textColor="@color/text_dark"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@android:color/transparent"/>

    <!-- Dosaggio -->
    <EditText
        android:id="@+id/tvMedicineDosage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="Dosaggio..."
        android:textColorHint="@color/text_dark_transparent"
        android:textColor="@color/text_dark"
        android:textSize="14sp"
        android:gravity="start"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@android:color/transparent"/>

    <!-- Pulsante elimina -->
    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/delete_24px"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Rimuovi farmaco"
        app:tint="@color/text_danger"
        android:layout_marginStart="8dp"
        android:visibility="gone"/>

</LinearLayout>
