<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nuova_reazione_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:ignore="HardcodedText">

    <!-- HEADER -->
    <include
        android:id="@+id/header"
        layout="@layout/header_layout_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SEZIONE TITOLO -->

    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="6dp"
        android:padding="4dp"
        android:text="Nuova Reazione"
        android:textColor="@color/text_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <!-- FORM SCORRIBILE -->

    <ScrollView
        android:id="@+id/form_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/section_title"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp"
            android:paddingBottom="100dp"
            android:dividerPadding="0dp">

            <!-- Data Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/empty_field_background"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/data_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data*"
                    android:focusable="false"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ora Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ora_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/empty_field_background"
                app:endIconMode="custom">
            <!--app:endIconDrawable="@drawable/ic_clock">-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ora_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ora"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Allergene Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/allergene_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/empty_field_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/allergene_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Allergene*"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gravità Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/gravita_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/empty_field_background"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/gravita_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gravità*"
                    android:focusable="true"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Sintomi Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sintomi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/empty_field_background"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_add_fab">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sintomi_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sintomi*"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Farmaci Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/farmaci_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/empty_field_background"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_add_fab">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/farmaci_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Farmaci"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Radio Group for Doctor Contact -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hai contattato il medico?"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="2dp" />

            <RadioGroup
                android:id="@+id/medico_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <RadioButton
                    android:id="@+id/si_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si"
                    android:layout_marginEnd="24dp" />

                <RadioButton
                    android:id="@+id/no_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

            </RadioGroup>

            <!-- Note Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/note_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/empty_field_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/note_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Note"
                    android:inputType="textMultiLine"
                    android:minLines="2" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Add Photo Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aggiungi Foto"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"/>

                <Button
                    android:id="@+id/aggiungi_image_btn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_add_fab"
                    android:contentDescription="Aggiungi foto"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- FAB check -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/check_24px"
        android:contentDescription="btnCeck"
        app:backgroundTint="@color/primary_medium"
        app:fabCustomSize="48dp"
        app:maxImageSize="24dp"
        app:tint="@color/text_dark"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.MaterialAlertDialog.Material3"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- NAVBAR -->
    <include
        layout="@layout/navbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
