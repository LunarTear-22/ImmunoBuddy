<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardAllergene"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/text_dark"
    app:cardBackgroundColor="@color/white"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Riga principale -->
        <TextView
            android:id="@+id/txtCategoriaAllergene"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Categoria Allergene"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnChevron"
            app:layout_constraintHorizontal_bias="0" />

        <!-- Chevron -->
        <ImageView
            android:id="@+id/btnChevron"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/stat_minus_1_24px"
            android:contentDescription="expand"
            app:tint="@color/text_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Contenuto espandibile -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSottocategorie"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="300dp"
            android:nestedScrollingEnabled="true"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtCategoriaAllergene"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_sottocategoria_allergene"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
