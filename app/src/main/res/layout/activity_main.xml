<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebf3ff"
    android:clipToPadding="false">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ImmunoBuddy"
            android:textColor="#001229"
            android:textSize="24sp"
            android:textFontWeight="600"/>

    </LinearLayout>

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="70dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:spacing="16dp">

            <!-- Greeting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:text="Ciao Francesca!"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="Salerno"
                            android:textColor="@color/text_dark"
                            android:layout_marginStart="4dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="normal"
                            android:textSize="24sp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_location" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="18Â°"
                            android:textSize="24sp"
                            android:textStyle="normal"
                            android:layout_marginStart="4dp"
                            android:textColor="#001229"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_sun" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:text="Hai bisogno di aiuto?"
                            android:textColor="#001229"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                        <!-- SOS Button -->
                        <Button
                            android:id="@+id/btnSOS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:backgroundTint="#ffb3b3"
                            android:text="SOS"
                            android:textColor="#b00020"
                            android:textSize="20sp"
                            android:textFontWeight="700"
                            android:drawableLeft="@drawable/ic_phone"
                            android:paddingHorizontal="20dp"
                            android:drawablePadding="8dp"
                            android:shape="rectangle"
                            android:radius="30dp" />
                </LinearLayout>
            </LinearLayout>


            <!-- Advice Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primary_dark"
                app:strokeColor="@color/text_dark"
                app:strokeWidth="1.5dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/avatar"
                        android:layout_marginEnd="12dp"
                        android:layout_height="55dp"
                        android:layout_width="55dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:text="Consiglio del giorno"
                            android:textColor="#001229"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"/>

                        <TextView
                            android:text="Lo sapevi? Il polline aumenta nelle ore centrali della giornata."
                            android:textColor="#001229"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reazioni -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#ffffff"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/text_dark"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Ultime Reazioni"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        android:textColor="#001229"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="12/05/2025"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"/>
                        <TextView
                            android:text=" - Orticaria da farmaco ð"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="normal"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="20/03/2025"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"/>

                        <TextView
                            android:text=" - Allergia pollini ð¸"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="normal"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="05/02/2025"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"/>

                        <TextView
                            android:text=" - Reazione a crostacei ð¦"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="normal"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mostra tutto"
                        android:textColor="@color/text_dark"
                        android:layout_gravity="end"
                        android:textFontWeight="600"
                        app:backgroundTint="@color/primary_medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Kit -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeColor="@color/text_dark"
                app:strokeWidth="1.5dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Nel tuo Kit:"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        android:textColor="#001229"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="â¢ JextÂ® 300 mcg"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                        <TextView
                            android:text=" - Adrenalina autoiniettabile"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="â¢ XyzalÂ® 5 mg"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                        <TextView
                            android:text=" - Antistaminico orale"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mostra tutto"
                        android:textColor="@color/text_dark"
                        android:layout_gravity="end"
                        android:textFontWeight="600"
                        app:backgroundTint="@color/primary_medium"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80dp">

        <!-- CAMERA BUTTON (sinistra) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            app:backgroundTint="#9acbfb"
            android:layout_margin="16dp"
            app:fabSize="normal"
            android:contentDescription="Camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- FAB principale (destra) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnFab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/primary_medium"
            android:layout_margin="16dp"
            app:fabSize="normal"
            android:contentDescription="Menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Menu dei FAB secondari -->
        <LinearLayout
            android:id="@+id/fabMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            android:visibility="gone"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- FAB Extended per Reazioni -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/btnReazioni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reazioni"
                android:textColor="@color/text_dark"
                app:backgroundTint="@color/primary_medium"
                android:paddingHorizontal="20dp"
                android:icon="@drawable/ic_add_fab"
                android:layout_marginBottom="8dp"
                app:elevation="2dp"
                app:pressedTranslationZ="4dp"/>

            <!-- FAB Extended per Promemoria -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/btnPromemoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promemoria Farmaci"
                android:textColor="@color/text_dark"
                app:backgroundTint="@color/primary_medium"
                android:paddingHorizontal="20dp"
                android:icon="@drawable/ic_add_fab"
                android:layout_marginBottom="8dp"
                app:elevation="2dp"
                app:pressedTranslationZ="4dp"/>

            <!-- FAB Extended per Sintomi -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/btnSintomi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sintomi"
                android:textColor="@color/text_dark"
                app:backgroundTint="@color/primary_medium"
                android:paddingHorizontal="20dp"
                android:icon="@drawable/ic_add_fab"
                android:layout_marginBottom="8dp"
                app:elevation="2dp"
                app:pressedTranslationZ="4dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- NAVIGATION BAR -->
    <include
        layout="@layout/navbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
