<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/background_light"
    android:padding="12dp">

        <!-- Testi contatto -->
            <EditText
                android:id="@+id/contactName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Nome Contatto..."
                android:textColorHint="@color/text_dark_transparent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_weight="2"
                android:background="@android:color/transparent"/>

            <EditText
                android:id="@+id/contactPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="+39 ......"
                android:textColorHint="@color/text_dark_transparent"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_dark"
                android:layout_weight="3"
                android:background="@android:color/transparent"/>

        <!-- Icona azione (es. chiamata) -->
        <ImageButton
            android:id="@+id/contactAction"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:src="@drawable/delete_24px"
            android:contentDescription="elimina contatto"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:visibility="gone"/>
    </LinearLayout>

