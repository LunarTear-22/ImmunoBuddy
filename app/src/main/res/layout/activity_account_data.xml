<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6FA">

    <!-- Header con back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Indietro"/>
    </LinearLayout>

    <!-- Titolo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ImmunoBuddy"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Sottotitolo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiorna i tuoi dati"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"/>

    <!-- Avatar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_person"   <!-- Usa la tua icona -->
        android:background="@drawable/circle_blue"
        android:padding="16dp"/>
    </LinearLayout>

    <!-- Form -->
    <EditText
        android:id="@+id/input_nome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nome"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_cognome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Cognome"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="email@domain.com*"
        android:inputType="textEmailAddress"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password*"
        android:inputType="textPassword"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_dob"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Data di Nascita"
        android:inputType="date"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <Spinner
        android:id="@+id/input_genere"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_posizione"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Posizione"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"/>

    <!-- Checkbox caregiver -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/check_caregiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sei un caregiver?"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Bottone invio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="24dp">

        <ImageButton
            android:id="@+id/btn_submit"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_blue"
            android:src="@android:drawable/ic_input_add"
            android:tint="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#A7D0F9"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/nav_alert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_dialog_alert"
            android:tint="@android:color/darker_gray"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_view"
            android:tint="@android:color/darker_gray"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/nav_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_myplaces"
            android:tint="@android:color/darker_gray"/>
    </LinearLayout>
</LinearLayout>
