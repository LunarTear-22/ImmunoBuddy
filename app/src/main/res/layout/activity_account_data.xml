<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F6FA">

    <include
        layout="@layout/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="-8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Titolo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ImmunoBuddy"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Sottotitolo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiorna i tuoi dati"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"/>

    <!-- Avatar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_user"
            android:background="@drawable/bg_circle_blue"
            android:padding="16dp"/>
    </LinearLayout>

    <!-- Form -->
    <EditText
        android:id="@+id/input_nome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nome"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_cognome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Cognome"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="email@domain.com*"
        android:inputType="textEmailAddress"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password*"
        android:inputType="textPassword"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_dob"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Data di Nascita"
        android:inputType="date"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <Spinner
        android:id="@+id/input_genere"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/input_posizione"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Posizione"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"/>

    <!-- Checkbox caregiver -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/check_caregiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sei un caregiver?"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Bottone invio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="24dp">

        <ImageButton
            android:id="@+id/btn_submit"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_circle_blue"
            />
    </LinearLayout>


    <!-- NAVIGATION BAR -->
    <include
        layout="@layout/navbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"/>

</LinearLayout>

