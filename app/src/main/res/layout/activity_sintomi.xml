<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sintomi_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light">


    <!-- HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            layout="@layout/header_layout_menu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TITOLO PAGINA -->
    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sintomi registrati"
        android:textColor="@color/text_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/table_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_tabella_reazioni"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/section_title"
            app:layout_constraintBottom_toTopOf="@id/buttons_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

        <!-- INTESTAZIONE LISTA (Sintomi | Frequenza | GravitÃ ) -->
        <LinearLayout
            android:id="@+id/list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

                <!-- Colonna Sintomi -->
                <TextView
                    android:id="@+id/header_sintomi"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Sintomi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_dark"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/header_Frequenza_container"
                android:layout_weight="1.5"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/header_Frequenza_icon"
                    android:rotation="180"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/sort_24px"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="ordina"/>


                <TextView
                    android:id="@+id/header_Frequenza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequenza"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_dark"
                    android:clickable="true"
                    android:focusable="true"
                    />
            </LinearLayout>

            <ImageButton
                android:id="@+id/header_gravita"
                android:rotation="180"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:src="@drawable/sort_24px"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_dark"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"
                android:contentDescription="ordina"/>

        </LinearLayout>

        <!-- RECYCLER VIEW LISTA SINTOMI -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sintomi_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        tools:listitem="@layout/item_sintomo" />

        </LinearLayout>

    <!-- CONTENITORE BOTTONI -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/sintomi_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navbar">

        <!-- Bottone AGGIORNA FREQUENZA -->
        <Button
            android:id="@+id/btnAggiorna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiorna frequenza"
            android:backgroundTint="@color/primary_medium"
            android:textColor="@color/text_dark"
            app:cornerRadius="24dp" />

        <!-- Bottone ANNULLA -->
        <Button
            android:id="@+id/btnAnnulla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annulla"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/primary_medium"
            android:textColor="@color/text_dark"
            app:cornerRadius="24dp" />

        <!-- Bottone SALVA -->
        <Button
            android:id="@+id/btnSalva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salva"
            android:visibility="gone"
            android:backgroundTint="@color/primary_medium"
            android:textColor="@color/text_dark"
            app:cornerRadius="24dp" />
    </LinearLayout>

    <!-- FAB PER NUOVO SINTOMO -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddSintomo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary_medium"
        android:layout_margin="16dp"
        app:maxImageSize="24dp"
        app:tint="@color/text_dark"
        app:fabCustomSize="48dp"
        android:contentDescription="Aggiungi sintomo"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.MaterialAlertDialog.Material3"
        />

    <!-- NAVIGATION BAR -->
    <include
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<include
layout="@layout/drawer_menu"
android:visibility="gone"/>


    </androidx.drawerlayout.widget.DrawerLayout>