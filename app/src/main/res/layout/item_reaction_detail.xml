<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="16dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:elevation="2dp">

    <!-- Header with title and close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reazione ai pistacchi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark" />

        <TextView
            android:id="@+id/close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="Ã—"
            android:textSize="20sp"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Detail fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Data:"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/detail_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="17/08/2025"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Ora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Ora:"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/detail_ora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="07:00"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Allergeni -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Allergeni:"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/detail_allergeni"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pistacchi"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Sintomi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Sintomi:"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/detail_sintomi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rush Cutaneo"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Riscontro medico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Riscontro medico:"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/detail_medico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Farmaci indicati -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Farmaci indicati:"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/detail_farmaci"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nessuno"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Note -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Note:"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/detail_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Assenti"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Foto section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto:"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_photos_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </LinearLayout>

</LinearLayout>
