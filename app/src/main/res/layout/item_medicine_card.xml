<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:id="@+id/cardMedicine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/text_dark"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toggleBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Row principale: Nome farmaco + toggle -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtMedicineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/switchButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:hint="Nome Farmaco..."
                android:textColorHint="@color/text_dark_transparent"
                android:textCursorDrawable="@color/text_dark"
                />

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/expandButton"
                android:contentDescription="expand"
                android:src="@drawable/unfold_more_24px"
                android:background="@android:color/transparent"
                app:layout_constraintLeft_toRightOf="@+id/txtMedicineName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/switchButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="6dp"/>


            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:trackTint="@color/track_colors_selector"
                app:thumbTint="@color/thumb_colors_selector"
                app:trackDecorationTint="@color/primary_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txtMedicineName"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Riga ora e giorni: visibile solo se espanso -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandedSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/toggleBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <!-- Selezione ora -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:id="@+id/GruppoSelezioneOra"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/GruppoRipetizione"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ora:"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/text_dark"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textAllCaps="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/GruppoRipetizione"
                app:layout_constraintTop_toBottomOf="@id/GruppoSelezioneOra"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

            <!-- Selezione giorni -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TvRipetizione"
                android:text="Ripetizione:"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"
                android:paddingTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/chipGroupDays"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    app:chipSpacingHorizontal="1dp"
                    app:singleSelection="false"
                    tools:layout_editor_absoluteY="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TvRipetizione"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Lun"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/inter_medium"
                        app:chipStrokeColor="@color/primary_medium"
                        app:chipStrokeWidth="1.5dp"
                        android:textSize="14sp"
                        app:textEndPadding="4dp"
                        app:textStartPadding="4dp"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipTue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Mar"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/inter_medium"
                        app:chipStrokeColor="@color/primary_medium"
                        app:chipStrokeWidth="1.5dp"
                        android:textSize="14sp"
                        app:textEndPadding="4dp"
                        app:textStartPadding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Mer"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/inter_medium"
                        app:chipStrokeColor="@color/primary_medium"
                        app:chipStrokeWidth="1.5dp"
                        android:textSize="14sp"
                        app:textEndPadding="4dp"
                        app:textStartPadding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/chip_bg_selector"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Gio"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/inter_medium"
                        app:chipStrokeColor="@color/primary_medium"
                        app:chipStrokeWidth="1.5dp"
                        android:textSize="14sp"
                        app:textEndPadding="4dp"
                        app:textStartPadding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/chip_bg_selector"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Ven"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/inter_medium"
                        app:chipStrokeColor="@color/primary_medium"
                        app:chipStrokeWidth="1.5dp"
                        android:textSize="14sp"
                        app:textEndPadding="4dp"
                        app:textStartPadding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/chip_bg_selector"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Sab"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/inter_medium"
                        app:chipStrokeColor="@color/primary_medium"
                        app:chipStrokeWidth="1.5dp"
                        android:textSize="14sp"
                        app:textEndPadding="4dp"
                        app:textStartPadding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/chip_bg_selector"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Dom"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/inter_medium"
                        app:chipStrokeColor="@color/primary_medium"
                        app:chipStrokeWidth="1.5dp"
                        android:textSize="14sp"
                        app:textEndPadding="4dp"
                        app:textStartPadding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/chip_bg_selector"/>
                </com.google.android.material.chip.ChipGroup>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
