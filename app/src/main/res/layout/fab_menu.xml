<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fabMenuLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="end"
    android:layout_gravity="end|bottom"
    android:layout_marginBottom="90dp"
    android:layout_marginEnd="20dp"
    android:visibility="gone">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnReazioni"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="+ Reazioni"
        android:textColor="@color/text_dark"
        android:backgroundTint="@color/primary_medium"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPromemoria"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="+ Promemoria Farmaci"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary_medium"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSintomi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="+ Sintomi"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary_medium"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        />
</LinearLayout>
